<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="152px"
        android:layout_height="100.62px"
        android:src="@color/cardview_dark_background"
        />
    <TextView
        android:text="NEW ITEM"
        android:textSize="9px"
        android:layout_marginTop="10.38px"
        android:layout_width="152px"
        android:textColor="#E75D1D"
        android:layout_height="23px"/>
    <TextView
        android:id="@+id/textview_name"
        android:text="Boiled Snow Crab Meat Flake - Approx 200g/Pack"
        android:layout_width="152px"
        android:layout_height="36px"
        android:layout_marginTop="3px"
        android:textSize="13px"
        android:textColor="#121212"
        />
    <TextView
        android:id="@+id/textview_price"
        android:layout_width="152px"
        android:layout_height="19px"
        android:text="$53.90"
        android:textSize="13px"
        android:textColor="#121212"/>
    <LinearLayout
        android:layout_width="152px"
        android:layout_height="32px"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="10.49px"
            android:layout_height="9.16px"

            android:layout_marginLeft="0.2px"
            android:layout_marginTop="8.48px"
            android:src="@drawable/ic_favorite" />

        <Button
            android:layout_width="129px"
            android:layout_height="32px"
            android:layout_marginLeft="13.84px"
            android:background="@drawable/shape_button"
            android:text="Add to cart"
            android:textSize="11px"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>