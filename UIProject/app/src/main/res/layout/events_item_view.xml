<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:gravity="center_vertical">
    
    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="match_parent"
        android:layout_height="212.29dp"/>
    <TextView
        android:id="@+id/textview_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_status_test"
        android:textSize="@dimen/text_size_status_of_posts"
        android:fontFamily="@font/jost_regular"/>
    <TextView
        android:id="@+id/textview_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost_medium"
        android:text="Event Listing Placeholder lorem ipsum dolor sit amet consetetur sadipscing elitr sed  dian sit."
        />
    
    <TextView
        android:id="@+id/textview_time"
        android:text="Time"
        android:textColor="#303030"
        android:fontFamily="@font/jost_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#303030"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/jost_regular"
        android:text="Category"
        />
    <TextView
        android:id="@+id/text_desc"
        android:text="Flavorful camembert cheese from the'hokkaido kobayusi'"
        android:fontFamily="@font/jost_light"
        android:layout_width="match_parent"
        android:textColor="#303030"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:layout_width="16dp"
        android:layout_height="15dp"
        android:layout_marginTop="23.9dp"
        android:src="@drawable/ic_favorite" />
    <Button
        android:layout_width="286.8dp"
        android:layout_height="32dp"
        android:background="@drawable/shape_button"
        android:layout_marginLeft="30.2dp"
        android:text="Add to cart"
        android:textSize="11px"
        android:textColor="#FFFFFF"/>


</LinearLayout>